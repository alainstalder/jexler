<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app
   xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5">

  <servlet>
    <servlet-name>jexler-jsp</servlet-name>
    <jsp-file>/Jexler.jsp</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>jexler-rest-servlet</servlet-name>
    <servlet-class>ch.artecat.jexler.war.JexlerRestDispatcherServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>jexler-jsp</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jexler-rest-servlet</servlet-name>
    <url-pattern>/rest/</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.js</url-pattern>
    <url-pattern>*.css</url-pattern>
    <url-pattern>*.ico</url-pattern>
    <url-pattern>*.png</url-pattern>
    <url-pattern>*.jpg</url-pattern>
    <url-pattern>*.gif</url-pattern>
    <url-pattern>*.htc</url-pattern>
    <url-pattern>*.ttf</url-pattern>
  </servlet-mapping>

  <listener>
    <listener-class>
      ch.artecat.jexler.war.JexlerContextListener
    </listener-class>
  </listener>
</web-app>
